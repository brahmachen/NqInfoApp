    <com.android.utils.SlideShowView
        android:id="@+id/slideshowView"
        android:layout_width="fill_parent"
        android:layout_height="170dp" >
    </com.android.utils.SlideShowView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#00ffffff"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/id_img_bcfz"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bcfh_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="病虫防治" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView 
                android:id="@+id/id_img_zzjs"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/zzjs_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="种植技术" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/id_img_schq"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/schq_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="市场行情" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/id_img_gyxq"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/gyxq_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="供应需求" />
        </LinearLayout>
    </LinearLayout>

