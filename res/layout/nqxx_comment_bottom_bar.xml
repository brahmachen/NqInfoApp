<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_layout_buttom"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#262d3a"
    android:orientation="horizontal"
    android:alpha="100"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/nqxx_comment_shoucang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" 
        android:gravity="center">

        <ImageView
            android:id="@+id/nqxx_comment_shoucang_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:clickable="false"
            android:src="@drawable/nqxx_comment_bottom_collect" />

        <TextView
            android:id="@+id/nqxx_comment_shoucang_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="收藏"
            android:textSize="15dp"
           android:textColor="@color/comment_bottom_titlebar" />
    </LinearLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/nqxx_comment_pinglun"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/nqxx_comment_pinglun_icon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:clickable="false"
            android:src="@drawable/nqxx_comment_bottom_comment" />

        <TextView
            android:id="@+id/nqxx_comment_pinglun_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="评论"
            android:textSize="15dp"
            android:textColor="@color/comment_bottom_titlebar" />
    </LinearLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/nqxx_comment_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/nqxx_comment_share_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:clickable="false"
            android:src="@drawable/nqxx_comment_bottom_share" />

        <TextView
            android:id="@+id/nqxx_comment_share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="7dp"
            android:text="分享"
            android:textColor="@color/comment_bottom_titlebar"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>