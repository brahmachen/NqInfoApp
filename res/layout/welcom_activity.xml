            android:layout_height="fill_parent"
            android:background="@drawable/welcome02" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/welcome03" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/welcome04" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/welcome05" >

            <Button
                android:id="@+id/startBtn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00ffffff"/>
        </RelativeLayout>
